@model Access
@{
    Layout = "_AdminLayout";
}

<div class="mb-3">
    <center><h2>FORM UPDATE DATA BLOG</h2></center>
</div>

<div class="row">
    <div class="col-12">
        <form asp-action="UpdateAccess" method="POST">
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="Username" value="@Model.Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="Name" class="form-control" rows="10" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="text" asp-for="Password" value="@Model.Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Role</label>
                @Html.DropDownList("RolessId", new SelectList(ViewBag.SelectListRole, "Value", "Text", Model.RolessId),
                new { @class = "form-control" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Update</button>
                <a href="@Url.Action("Index","Blog")" class="btn btn-info">Cancel</a>
            </div>
        </form>
    </div>
</div>


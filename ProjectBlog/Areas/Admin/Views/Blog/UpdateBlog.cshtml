@model Blog
@{
    Layout = "_AdminLayout";
}

<div class="mb-3">
    <center><h2>FORM UPDATE DATA BLOG</h2></center>
</div>

<div class="row">
    <div class="col-12">
        <form asp-action="UpdateBlog" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>Choose Picture</label><br />
                <img src="~/uploads/img/@Model.Picture" width="150" class="mb-3" />
                <input type="file" asp-for="Picture" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" asp-for="Title" value="@Model.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea type="text" asp-for="Content" class="form-control" rows="10">@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Author</label>
                <input type="text" asp-for="Author" value="@Model.Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Created Date</label>
                <input type="datetime" asp-for="CreatedDate" value="@Model.CreatedDate.ToString("dd/MM/yyyy")" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select asp-for="Status" class="form-control">
                    @if (Model.Status.ToString() == "True")
                    {
                        <option value="True" selected>True</option>
                        <option value="False">False</option>
                    }
                    else
                    {
                        <option value="True">True</option>
                        <option value="False" selected>False</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Update</button>
                <a href="@Url.Action("Index","Blog")" class="btn btn-info">Cancel</a>
            </div>
        </form>
    </div>
</div>

